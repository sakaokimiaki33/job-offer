= render 'render/header'

.product__detail__main
  .product__detail__box
    .product__detail__box__name 
      = @current_user.company_name
    .product__image
      = image_tag @job.images[0].image.url, class: "big-image"
    .product__image--small
      %ul.product__image--small__list
        %li.product__image--small__list__1
          - if @job.images[1]
            = image_tag @job.images[1].image.url, class: "small-image"
        %li.product__image--small__list__2
          - if @job.images[2]
            = image_tag @job.images[2].image.url, class: "small-image"
        %li.product__image--small__list__3
          - if @job.images[3]
            = image_tag @job.images[3].image.url, class: "small-image"
        %li.product__image--small__list__4
          - if @job.images[4]
            = image_tag @job.images[4].image.url, class: "small-image"

    .products__main__box2
      .products__main__name
        企業名
        = @company_name
    .products__main__box3
      .products__detail__category
        職種
        = @occupation
      .products__main__name
        仕事内容
        = @job_description
      .products__main__name
        掲載開始日
        .products__detail__brand__side 
          = @Posting_start_date
      .products__main__name
        掲載終了日
        .products__detail__brand__side 
          = @Posting_end_date
      .products__main__name
        応募資格
        .products__detail__brand__side
          = @qualification
      .products__main__name
        雇用形態
        = @employment_id
      .products__main__name
        給与
        .products__detail__brand__side
          = @salary
      .products__main__name
        待遇、福利厚生
        .products__detail__brand__side
          = @treatment
      .products__main__name
        勤務時間
        .products__detail__brand__side
          = @working_hours
      .products__main__name
        休日
        .products__detail__brand__side
          = @holiday
      .products__main__name
        勤務地
        .products__detail__brand__side
          = @work_location
      .products__main__name
        応募方法
        .products__detail__brand__side
          = @application_method
      .products__main__name
        会社アピール
        .products__detail__brand__side
          = @contact
      .products__detail
        お問い合わせ先について
      .products__main__name
        所在地
        .products__detail__brand__side
          = @location
      .products__main__name
        電話番号
        .products__detail__brand__side
          = @phone
      .products__main__name
        担当者名
        .products__detail__brand__side
          = @contact_name
      .products__main__name
        HPアドレス
        .products__detail__brand__side
          = @hp_address
      .products__main__box6
        .products__sell
          = link_to "編集", edit_job_path
          = link_to "削除", "/jobs/#{@job.id}", method: :delete, class: "product__detail__delete"
        .products__back
          = link_to "/", class: "products__sell__contents__btn--back" do
            もどる  
= render 'render/footer'
